<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="80dp"/>
            <gradient android:type="linear" android:startColor="#ff16cff3" android:endColor="#ff0078a6" android:angle="0" />
            <item android:name="android:shadowColor">#29000000</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">1</item>
            <item android:name="android:shadowDy">1</item>
        </shape>
    </item>

</selector>